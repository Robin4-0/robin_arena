<?xml version="1.0"?>
<launch>
  <arg name="ur5_ns"      default="/ur5"  />
  <arg name="ur5_limited" default="true"  />
  <arg name="gripper_enable" default="true" />

  <group ns="$(arg ur5_ns)">

   <param name="tf_prefix" value="/"/>

    <include file="$(find robin_arena)/launch/internal/ur5.launch">
      <arg name="ur5_ns"         value="/$(arg ur5_ns)"         />
      <arg name="ur5_limited"    value="$(arg ur5_limited)"     />
      <arg name="gripper_enable" value="$(arg gripper_enable)"  />
    </include>

    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="spawn_ur5_model"
          pkg="gazebo_ros"
          type="spawn_model"
          args="-urdf -param robot_description -model robin_ur5"
          respawn="false"
          output="screen" />

      <include if="$(arg gripper_enable)" file="$(find robin_arena)/launch/internal/controller_utils_ur5_3fgripper.launch"/>

      <include unless="$(arg gripper_enable)" file="$(find robin_arena)/launch/internal/controller_utils_ur5_magnet.launch"/>

      <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>
      <node name="arm_controller_spawner"
            pkg="controller_manager"
            type="controller_manager"
            args="spawn arm_controller"
            respawn="false"
            output="screen"/>

      <node name="relay_depth_camera_info"
            pkg="topic_tools"
            type="relay"
            output="screen"
            args="/camera/rgb_lowres/camera_info /camera/depth_lowres/camera_info" />
      <node name="relay_depth_ir_camera_info"
            pkg="topic_tools"
            type="relay"
            output="screen"
            args="/camera/ir/camera_info /camera/depth/camera_info" />
    </group>
  </launch>
